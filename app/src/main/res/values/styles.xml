<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.Button.Big" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:background">@drawable/selector_button</item>
        <item name="android:textColor">@color/main_white</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/dm_sans_medium</item>
    </style>

    <style name="AppTheme.Button.Small" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:background">@drawable/selector_button</item>
        <item name="android:textColor">@color/main_white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/dm_sans_medium</item>
    </style>

    <style name="AppTheme.Text.Header1" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/main_black</item>
        <item name="android:textSize">38sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="AppTheme.Text.Header2" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/main_black</item>
        <item name="android:textSize">23sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/quicksand_bold</item>
    </style>

    <style name="AppTheme.Text.Header3" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/main_black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/quicksand_bold</item>
    </style>

    <style name="AppTheme.Text.Body" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/main_black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/dm_sans_medium</item>
    </style>

    <style name="AppTheme.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/main_black</item>
        <item name="android:textColorHint">@color/main_grey</item>
        <item name="android:backgroundTint">@color/main_grey</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/quicksand_regular</item>
    </style>

